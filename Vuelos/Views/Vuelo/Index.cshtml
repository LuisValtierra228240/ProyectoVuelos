@using Vuelos.Entidades;
@model List<Vuelo>


@section css
{
    <!-- DataTables CSS -->
    <link href="~/Content/css/dataTables/dataTables.bootstrap.css" rel="stylesheet">

    <!-- DataTables Responsive CSS -->
    <link href="~/Content/css/dataTables/dataTables.responsive.css" rel="stylesheet">
}


<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Vuelos
            </div>
            <div class="panel-body">
                <a href="@Url.Action("Registro","Vuelo", new { id = 0})" class="btn btn-primary">Agregar nuevo</a>
                <div class="table-responsive" style="margin-top: 15px">

                    <!-- tabla aquí -->
                    <table class="table table-striped table-bordered table-hover" id="tabla">
                        <thead>
                            <tr>
                                <th scope="col" style="width: 5%">id</th>
                                <th scope="col">Origen</th>
                                <th scope="col">Destino</th>
                                <th scope="col">Avion</th>
                                <th scope="col">Capacidad</th>
                                <th scope="col">Fecha</th>
                                <th scope="col" style="width: 5%">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Vuelo v in Model)
                            {
                                <tr>
                                    <th scope="row">
                                        @v.Id
                                    </th>
                                    <td>
                                        @v.Origen
                                    </td>
                                    <td>
                                        @v.Destino
                                    </td>
                                    <td>
                                        @v.Avion.Nombre
                                    </td>
                                    <td>
                                        @v.Capacidad
                                    </td>
                                    <td>
                                        @v.Fecha
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Pasajeros", "Vuelo", new { id = v.Id})">Ver pasajeros</a>
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Registro","Vuelo", new { id = v.Id})" class="btn btn-primary btn-circle"><i class="fa fa-pencil"></i></a>
                                        <a onclick="eliminar(@v.Id)" class="btn btn-danger btn-circle"><i class="fa fa-trash-o"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>

@section js
{
    <script>
        $(document).ready(function () {
            $('#tabla').DataTable({
                "oLanguage": {
                    "sUrl": "//cdn.datatables.net/plug-ins/1.13.1/i18n/es-ES.json"
                }
            });
        });
    </script>

    <script src="~/Content/js/proyectoVuelos/vuelo.js"></script>

    <!-- DataTables JavaScript -->
    <script src="~/Content/js/dataTables/jquery.dataTables.min.js"></script>
    <script src="~/Content/js/dataTables/dataTables.bootstrap.min.js"></script>

    <!-- Sweet Alert 2 JavaScript-->
    <script src="~/Content/js/proyectoVuelos/sweetalert2.js"></script>
}

