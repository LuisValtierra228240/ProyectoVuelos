@using Vuelos.Entidades
@model Avion
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Registro
            </div>
            <div class="panel-body">

                <!--Formulario aquí-->
                <form action="@Url.Action("Guardar","Avion")">
                    <input type="hidden" class="form-control" name="id" value="@Model.Id">
                    <div class="form-group">
                        <label>Placa del Avion:</label>
                        <input class="form-control" name="placa" value="@if (Model.Id != 0) { @Model.Placa}"/>
                    </div>
                    <div class="form-group">
                        <label>Nombre del Avion:</label>
                        <input class="form-control" name="nombre" value="@if (Model.Id != 0) { @Model.Nombre}"/>
                    </div>

                    <button class="btn btn-success" type="submit">Guardar</button>

                </form>
            </div>
        </div>
    </div>
</div>


